{
  "name": "cashier-server",
  "version": "0.1.0",
  "description": "Server of Sun's Double-Entry Accounting System",
  "scripts": {
    "watch-server": "nodemon",
    "generate": "pegjs --plugin ./node_modules/ts-pegjs/src/tspegjs.js --extra-options-file pegconfig.json -o src/core/query/parser.ts src/core/query/parser.pegjs",
    "build-ts": "tsc",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "docs": "jsdoc -c .jsdoc.json",
    "serve": "node -r source-map-support/register dist/app.js",
    "build": "npm run generate && npm run tslint && npm run build-ts",
    "start": "npm run serve",
    "test": "TS_NODE_FILES=true mocha -r ts-node/register --timeout 10000 'test/**/*.test.ts'",
    "test-coverage": "nyc --reporter=lcov --extension=.ts --extension=.js npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sunziping2016/cashier-server.git"
  },
  "author": "Ziping Sun",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sunziping2016/cashier-server/issues"
  },
  "homepage": "https://github.com/sunziping2016/cashier-server#readme",
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/commander": "^2.12.2",
    "@types/http-errors": "^1.6.3",
    "@types/jsonwebtoken": "^8.3.5",
    "@types/koa": "^2.11.0",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-router": "^7.0.42",
    "@types/merge-descriptors": "^1.0.1",
    "@types/mocha": "^5.2.7",
    "@types/mongoose": "^5.5.37",
    "@types/node": "^13.1.2",
    "@types/qs": "^6.9.0",
    "@types/redis": "^2.8.14",
    "@types/rimraf": "^2.0.3",
    "@types/supertest": "^2.0.8",
    "@types/winston": "^2.4.4",
    "codecov": "^3.6.1",
    "jsdoc": "^3.6.3",
    "minami": "^1.2.3",
    "mocha": "^10.2.0",
    "nodemon": "^2.0.2",
    "nyc": "^15.0.0",
    "pegjs": "^0.10.0",
    "supertest": "^4.0.2",
    "ts-node": "^8.5.4",
    "ts-pegjs": "^0.2.6",
    "tslint": "^5.20.1",
    "typescript": "^3.7.4"
  },
  "dependencies": {
    "@elastic/elasticsearch": "^7.5.0",
    "ajv": "^6.10.2",
    "bcrypt": "^3.0.7",
    "command": "0.0.5",
    "http-errors": "^1.7.3",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.11.0",
    "koa-bodyparser": "^4.2.1",
    "koa-router": "^7.4.0",
    "merge-descriptors": "^1.0.1",
    "mongoosastic": "^4.5.1",
    "mongoose": "^5.8.3",
    "qs": "^6.9.1",
    "redis": "^2.8.0",
    "redis-commands": "^1.5.0",
    "rimraf": "^3.0.0",
    "winston": "^3.2.1"
  }
}
