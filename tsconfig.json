{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "lib": [
      "es2015"
    ],
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "baseUrl": ".",
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "app.ts",
    "config/**/*.json",
    "src/**/*",
    "test/**/*"
  ]
}
