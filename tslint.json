{
  "extends": "tslint:recommended",
  "jsdoc-format": true,
  "rules": {
    "arrow-parens": false,
    "curly": false,
    "interface-name": false,
    "max-classes-per-file": false,
    "max-line-length": {
      "options": [80]
    },
    "object-literal-sort-keys": false,
    "prefer-const": true,
    "quotemark": {
      "options": [
        "single"
      ]
    }
  }
}
